<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcodeguess"
    tools:context=".AboutActivity">

    <!-- Chaîne verticale pour espacer harmonieusement les éléments -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/appText"
        android:layout_width="300dp"
        android:layout_height="64dp"
        android:layout_marginTop="40dp"
        android:elevation="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Flashcard"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:backgroundTint="#FF25AA"
        app:cornerRadius="32dp"
        app:layout_constraintBottom_toTopOf="@+id/groupeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:rippleColor="#99FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/groupeText"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:elevation="6dp"
        android:fontFamily="sans-serif"
        android:text="Groupe 10"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:backgroundTint="#F443A9"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/versionText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appText"
        app:rippleColor="#99FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/versionText"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="40dp"
        android:elevation="6dp"
        android:fontFamily="sans-serif-light"
        android:text="Version 1.0"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#E91E63"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupeText"
        app:rippleColor="#99FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>
