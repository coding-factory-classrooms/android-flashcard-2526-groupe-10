<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/questionImageView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hard_ouali" />

    <TextView
        android:id="@+id/numberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="01"
        app:layout_constraintBottom_toTopOf="@+id/recycleQuestionId"
        app:layout_constraintStart_toEndOf="@+id/questionImageView"
        app:layout_constraintTop_toTopOf="@+id/questionImageView" />

    <TextView
        android:id="@+id/recycleQuestionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="qui est-ce?"
        app:layout_constraintBottom_toBottomOf="@+id/questionImageView"
        app:layout_constraintStart_toStartOf="@+id/numberTextView"
        app:layout_constraintTop_toBottomOf="@+id/numberTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>