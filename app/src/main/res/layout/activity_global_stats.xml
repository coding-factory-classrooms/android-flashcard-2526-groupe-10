<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".GlobalStats">

    <!-- 🏆 Titre principal -->
    <TextView
        android:id="@+id/titleStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="Statistiques du Joueur"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 🧾 Carte contenant les stats -->

    <!-- 🔙 Bouton retour -->

    <LinearLayout
        android:id="@+id/statsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="68dp"
        android:alpha="0.95"
        android:background="@drawable/rounded_stats_card"
        android:clipToOutline="true"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleStats">

        <!-- 🎮 Nombre de parties -->
        <TextView
            android:id="@+id/textNbrGameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Nombre de parties jouées :"
            android:textColor="#4A148C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/gamePlayId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:text="0  🎮"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- ✅ Bonnes réponses -->
        <TextView
            android:id="@+id/textNbrBonneRepId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Nombre total de bonnes réponses :"
            android:textColor="#4A148C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/totalCorrectId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:text="0 ☑️"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- ❌ Mauvaises réponses -->
        <TextView
            android:id="@+id/textNbrMauvaisRepId2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Nombre total de mauvaises réponses :"
            android:textColor="#4A148C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/totalWrongId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:text="0 ❌"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- ⏱️ Temps total -->
        <TextView
            android:id="@+id/textTempsTotalJeuxId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Temps total de jeu :"
            android:textColor="#4A148C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/totalTimeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:text="0 ⌛"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/homeBackButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="176dp"
        android:backgroundTint="#E91E63"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        android:text="Retour au menu"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statsCard" />

    <Button
        android:id="@+id/resetButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="103dp"
        android:fontFamily="sans-serif-medium"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/homeBackButtonId"
        app:layout_constraintStart_toStartOf="@+id/homeBackButtonId"
        app:layout_constraintTop_toBottomOf="@+id/homeBackButtonId" />

</androidx.constraintlayout.widget.ConstraintLayout>
