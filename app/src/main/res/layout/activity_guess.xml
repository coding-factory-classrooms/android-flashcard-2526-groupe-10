<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#341054"
    tools:context=".GuessActivity">


    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="302dp"
        android:layout_height="45dp"
        android:layout_marginTop="68dp"
        android:background="#230D40"
        android:gravity="center"
        android:text="Qui est-ce ?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/characterImageView"
        android:layout_width="356dp"
        android:layout_height="222dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTextView"
        app:srcCompat="@drawable/coding" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="364dp"
        android:layout_height="177dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="@+id/characterImageView"
        app:layout_constraintStart_toStartOf="@+id/characterImageView"
        app:layout_constraintTop_toBottomOf="@+id/characterImageView">

        <RadioButton
            android:id="@+id/firstRadioButton"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginTop="4dp"
            android:background="#8B5CF6"
            android:button="@null"
            android:clipToOutline="false"
            android:elevation="6dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="Réponse A"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:translationZ="4dp" />

        <RadioButton
            android:id="@+id/secondRadioButton"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginTop="4dp"
            android:background="#EC4899"
            android:button="@null"
            android:clipToOutline="false"
            android:elevation="6dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="Réponse B"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:translationZ="4dp" />

        <RadioButton
            android:id="@+id/thirdRadioButton"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginTop="4dp"
            android:background="#3B82F6"
            android:button="@null"
            android:clipToOutline="false"
            android:elevation="6dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="Réponse C"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:translationZ="4dp" />
    </RadioGroup>

    <Button
        android:id="@+id/guessButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#7C3AED"
        android:elevation="8dp"
        android:paddingVertical="12dp"
        android:text="Valider ma réponse"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Sélectionnez une réponse pour continuer"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessButton"
        app:layout_constraintVertical_bias="0.175" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1E022E"
        android:max="100"
        android:progressTint="#A58EE7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
